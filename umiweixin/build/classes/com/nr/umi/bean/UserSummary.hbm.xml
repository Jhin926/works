<?xml version="1.0" encoding='UTF-8'?> 
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" > 
 
<hibernate-mapping package="com.nr.umi.bean">
<class name="UserSummary" table="v_user_summary">
	<id name="userId" column="c_user_id">
	</id>
	<property name="userName" column="c_user_name"></property>
	<property name="isVerified" column="c_is_verified"></property>
	<property name="totalAmount" column="c_total_amount"></property>
	<property name="refererId" column="c_referer_id"></property>
	<property name="date" column="c_date"></property>
</class>
</hibernate-mapping>